# Get the root power directory NOT the bin dir
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." >/dev/null 2>&1 && pwd )"

# Create the nodes configuration file as it isn't checked into the repo
touch $DIR/etc/nodes.yaml

cat << EOF
# NOTES:
# 1) This output is sensitive! Please keep the jwt_shared_secret safe!
# 2) This script is not rerunnable! Doing so will regenerate jwt_shared_secret
# 3) The set -a (/+a) must be omitted when within an EnvironmentFile in systemd
# 4) The unsets are optional if the env vars have not already been set

set -a

commands_config_path=$DIR/etc/commands.yaml
nodes_config_path=$DIR/etc/nodes.yaml
working_directory_path=$DIR/libexec
jwt_shared_secret=$(cat /dev/urandom | tr -dc 'a-zA-Z1-9' | fold -w 32 | head -n 1)

set +a

unset remote_url
unset remote_cluster
unset remote_jwt
unset full_upstream
unset log_level
EOF
